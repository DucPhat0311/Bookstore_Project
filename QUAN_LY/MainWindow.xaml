<Window x:Class="QUAN_LY.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm="clr-namespace:QUAN_LY.ViewModel"
        xmlns:Menu="clr-namespace:QUAN_LY.Utilities"
        mc:Ignorable="d"
        Title="MainWindow" Height="576" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <!-- Gán DataContext cho Window, sử dụng PageModel là ViewModel chính -->
    <Window.DataContext>
        <vm:PageModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cột 0: Menu Navigation -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button HorizontalAlignment="Left" Margin="20 28 0 35" Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/>
                </Button>

                <Border Grid.Row=" 1" Background="#623ed0" CornerRadius="0 50 0 30">
                    <DockPanel>
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
                                DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/LOGO.jpg"/>
                                </Ellipse.Fill>
                            </Ellipse>

                        </Border>
                        <TextBlock Text="ADVT" Foreground="White" FontSize="22" FontWeight="SemiBold"
                                        DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10"/>
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc"/>

                        <StackPanel DockPanel.Dock="Top">
                            <!-- Nút Home: Gắn Command -->
                            <Button Style="{StaticResource menuButton}"
                                    Command="{Binding NavigateCommand}"
                                    CommandParameter="Home">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Home" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Home"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Order: Gắn Command -->
                            <Button Style="{StaticResource menuButton}"
                                    Command="{Binding NavigateCommand}"
                                    CommandParameter="Order">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="FileDocumentEdit" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Order"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Book Management: Gắn Command -->
                            <Button Style="{StaticResource menuButton}"
                                    Command="{Binding NavigateCommand}"
                                    CommandParameter="BookManagement">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="BookMultiple" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Book Management"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Inventory: Gắn Command -->
                            <Button Style="{StaticResource menuButton}"
                                    Command="{Binding NavigateCommand}"
                                    CommandParameter="Inventory">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="library" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Inventory"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Revenue Statistics: Gắn Command -->
                            <Button Style="{StaticResource menuButton}"
                                    Command="{Binding NavigateCommand}"
                                    CommandParameter="RevenueStatistics">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Finance" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Revenue Statistics"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        
                        <Button Style="{StaticResource menuButton}" 
                          VerticalAlignment="Bottom" 
                          DockPanel.Dock="Bottom" 
                          Margin="15,0"
                          Click="LogoutButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Logout"/>
                            </StackPanel>
                        </Button>


                    </DockPanel>

                </Border>


            </Grid>

            <!-- Cột 1: Khu vực hiển thị nội dung chính -->
            <Grid Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


                <!-- Hàng 0: Thanh Search và Icons (Giữ nguyên) -->
                <Grid Width="300" HorizontalAlignment="Left" Grid.Row="0">
                    <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                               Panel.ZIndex="1" Text="Search here ..."
                               Visibility="{Binding ElementName=txtSearch,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>
                    <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}"/>
                    <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                           Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"/>
                </Grid>


                <Button Style="{StaticResource topButton}" Margin="0 0 20 0" Background="#dcdcdc" HorizontalAlignment="Right" Grid.Row="0">
                    <Icon:PackIconMaterial Kind="Cog"/>
                </Button>
                <Button Style="{StaticResource topButton}" Margin="0 0 55 0" HorizontalAlignment="Right" Grid.Row="0">
                    <Icon:PackIconMaterial Kind="Bell"/>
                </Button>

                <!-- Hàng 1: Tiêu đề và nút Add Book (Giữ nguyên) -->
                <!-- Tôi sẽ ẩn phần này vì ContentControl sẽ thay thế toàn bộ nội dung hiển thị View -->
                <!-- Thay thế nội dung tĩnh bằng ContentControl để hiển thị View động -->

                <ContentControl Grid.Row="1" Grid.RowSpan="6"
                                Content="{Binding CurrentViewModel}"
                                Margin="0 20 0 0" />
                <!-- ContentControl sẽ trải dài từ Row 1 đến Row cuối cùng -->

            </Grid>

        </Grid>

    </Border>

</Window>