<Window x:Class="QUAN_LY.LoginWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:util="clr-namespace:QUAN_LY.Utilities"
        mc:Ignorable="d"
        Title="Đăng nhập" 
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize">

    <Window.Resources>
        <util:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#623ed0" CornerRadius="20,0,0,20">
                <Grid>
                    <materialDesign:PackIcon Kind="BookOpenVariant" Width="300" Height="300" 
                                             Foreground="White" Opacity="0.1" 
                                             HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-50,-50"/>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Storefront" Width="80" Height="80" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="BOOK STORE" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Management System" FontSize="16" Foreground="#ddd" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Button x:Name="btnClose" Content="✕" Click="BtnClose_Click"
                        Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="#888" FontSize="18"/>

                <StackPanel VerticalAlignment="Center" Margin="50,0">
                    
                    <TextBlock Text="Vui lòng đăng nhập để tiếp tục" FontSize="14" Foreground="#888" Margin="0,0,0,30"/>

                    <TextBox x:Name="txtUsername" 
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             materialDesign:HintAssist.Hint="Tên đăng nhập"
                             materialDesign:HintAssist.Foreground="#623ed0"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,0,5" FontSize="16">
                    </TextBox>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,15"
                                Visibility="{Binding UserNameError, Converter={StaticResource StringToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="AlertCircle" Foreground="Red" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding UserNameError}" Foreground="Red" FontSize="12" FontStyle="Italic"/>
                    </StackPanel>


                    <PasswordBox x:Name="txtPassword"
                                 materialDesign:HintAssist.Hint="Mật khẩu"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Margin="0,0,0,30" FontSize="16"/>

                    <Button x:Name="btnLogin" Content="ĐĂNG NHẬP"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=txtPassword}"
                            IsDefault="True"
                            Height="50" FontSize="16" FontWeight="Bold" Background="#623ed0" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                 Value="0" IsIndeterminate="True" 
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                                 Margin="0,20,0,0"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#FF5252" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>