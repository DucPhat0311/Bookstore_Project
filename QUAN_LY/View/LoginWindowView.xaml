<Window x:Class="QUAN_LY.LoginWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng nhập" 
        Height="576" 
        Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <Ellipse Width="500" Height="500" VerticalAlignment="Bottom"  
                     Fill="#80c0f6" Margin="50,0,0,-200" Opacity="0.6"/>
            <Ellipse Width="300" Height="300" VerticalAlignment="Bottom"  
                     Fill="#83c2f6" Margin="450,0,0,30" Opacity="0.3"/>
            <Ellipse Width="400" Height="400" VerticalAlignment="Bottom"  
                     Fill="#84c3f6" Margin="320,0,0,-120" Opacity="0.3"/>
            <Ellipse Width="250" Height="250" VerticalAlignment="Bottom"  
                     Fill="#81c2f6" Margin="380,0,0,-120"/>
            <Ellipse Width="400" Height="400" VerticalAlignment="Bottom"  
                     Fill="#87c5f6" Margin="280,0,0,-70" Opacity="0.8"/>

            <Grid Width="540" HorizontalAlignment="Left" Margin="50,0,0,0">
                <StackPanel VerticalAlignment="Center" Width="400">
                    <TextBlock Text="Welcome" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#333"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Sign in" 
                               FontSize="16" 
                               Foreground="#666"
                               Margin="0,0,0,30"/>

                   

                    <TextBlock Text="UserName" 
                               Foreground="#666" 
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="txtUsername" 
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Height="45" 
                             FontSize="14"
                             Padding="15,10"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"
                             Background="White">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Password" 
                               Foreground="#666" 
                               FontSize="14"
                               Margin="0,15,0,5"/>

                    <PasswordBox x:Name="txtPassword" 
                                 KeyDown="txtPassword_KeyDown"
                                 Height="45"
                                 FontSize="14"
                                 Padding="15,10"
                                 BorderThickness="1"
                                 BorderBrush="#E0E0E0"
                                 Background="White">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>


                    <TextBlock x:Name="txtError" 
                               Text="{Binding ErrorMessage}"
                               Foreground="Red" 
                               FontSize="12"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Button x:Name="btnLogin" 
                            Content="Sign in"
                            Height="50" 
                            Margin="0,25,0,0"
                            Background="#623ed0" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            BorderThickness="0" 
                            Click="BtnLogin_Click"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                   
                </StackPanel>
            </Grid>

            <Grid Width="540" HorizontalAlignment="Right" Margin="0,0,50,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="QUẢN LÝ SÁCH" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="#623ed0"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Hệ thống quản lý sách hiện đại" 
                               FontSize="18" 
                               Foreground="#666"
                               TextAlignment="Center"
                               Margin="0,0,0,40"/>

                    <StackPanel Margin="0,0,0,40">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="#623ed0" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý sách và tài liệu" Foreground="#333"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="#623ed0" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Thêm/xóa sách" Foreground="#333"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="#623ed0" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Thống kê doanh thu" Foreground="#333"/>
                        </StackPanel>
                    </StackPanel>


                </StackPanel>
            </Grid>

            <Button x:Name="btnClose" 
                    Content="X" 
                    Width="30" Height="30"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,20,20,0"
                    Background="Transparent"
                    Foreground="#666"
                    FontWeight="Bold"
                    BorderThickness="0" 
                    Click="BtnClose_Click"
                    Cursor="Hand"/>
        </Grid>
    </Border>
</Window>