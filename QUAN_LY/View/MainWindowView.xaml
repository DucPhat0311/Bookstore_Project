<Window x:Class="QUAN_LY.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm="clr-namespace:QUAN_LY.ViewModel"
        xmlns:Menu="clr-namespace:QUAN_LY.Utilities"
        mc:Ignorable="d"
        Title="MainWindow" Height="730" Width="1320" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.DataContext>
        <vm:PageModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cột 0: Menu Navigation -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button HorizontalAlignment="Left" Margin="20 28 0 35" Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/>
                </Button>

                <Border Grid.Row="1" Background="#623ed0" CornerRadius="0 50 0 30">
                    <DockPanel>
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
        DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Grid>
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="#FF623ED0"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <TextBlock Text="{Binding UserInitials}" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="28"
                   FontWeight="Bold"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="{Binding UserFullName}" 
           Foreground="White" 
           FontSize="16" 
           FontWeight="SemiBold"
           DockPanel.Dock="Top" 
           TextAlignment="Center" 
           Margin="5 25 0 10"
           TextWrapping="Wrap"/>

                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc"/>

                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}"
            Command="{Binding NavigateCommand}"
            CommandParameter="Home"
            Visibility="{Binding DashboardVisibility}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Home" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Home"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"
            Command="{Binding NavigateCommand}"
            CommandParameter="SellBook">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Shopping" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Sell Book"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"
            Command="{Binding NavigateCommand}"
            CommandParameter="Order">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="FileDocumentEdit" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Order"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"
        Command="{Binding NavigateCommand}"
        CommandParameter="Book">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="BookMultiple" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Book"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"
            Command="{Binding NavigateCommand}"
            CommandParameter="Inventory"
            Visibility="{Binding DashboardVisibility}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Library" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Inventory"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"
            Command="{Binding NavigateCommand}"
            CommandParameter="RevenueStatistics"
            Visibility="{Binding DashboardVisibility}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Finance" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Revenue Statistics"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"
            Command="{Binding NavigateCommand}"
            CommandParameter="Admin"
            Visibility="{Binding AdminTabVisibility}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountGroup" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Employee management"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Nút Logout ở dưới cùng -->
                        <Button Style="{StaticResource menuButton}"
                                VerticalAlignment="Bottom"
                                DockPanel.Dock="Bottom"
                                Margin="15,0"
                                Click="LogoutButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Logout"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- Cột 1: Nội dung chính -->
            <Grid Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- Thanh tìm kiếm và các icon trên cùng -->
                
                <!-- thien xoa thanh search va sua nut cai dat thanh thoat
                
                <Grid Width="300" HorizontalAlignment="Left" Grid.Row="0">
                    <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                               Panel.ZIndex="1" Text="Search here ..."
                               Visibility="{Binding ElementName=txtSearch,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>
                    <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}"/>
                    <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                           Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"/>
                </Grid>
-->
                <Button Style="{StaticResource topButton}" 
        Margin="0 0 20 0" 
        HorizontalAlignment="Right" 
        Grid.Row="0"
        Click="CloseApp_Click" 
        Background="Transparent">
                    <Icon:PackIconMaterial Kind="Close" Foreground="#FF4444" Width="20" Height="20"/>
                </Button>

                <Button Style="{StaticResource topButton}" Margin="0 0 55 0" HorizontalAlignment="Right" Grid.Row="0">
                    <Icon:PackIconMaterial Kind="Bell"/>
                </Button>

                <!-- Khu vực hiển thị View động -->
                <ContentControl Grid.Row="1" Grid.RowSpan="6"
                                Content="{Binding CurrentViewModel}"
                                Margin="0 20 0 0" />
            </Grid>
        </Grid>
    </Border>
</Window>