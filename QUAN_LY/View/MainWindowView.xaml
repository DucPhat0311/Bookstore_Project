<Window x:Class="QUAN_LY.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm="clr-namespace:QUAN_LY.ViewModel"
        xmlns:utils="clr-namespace:QUAN_LY.Utilities"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        
        Title="QUẢN LÝ NHÀ SÁCH" Height="730" Width="1320" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized" 
        Background="#eff2f7">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:PageModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <utils:MenuSelectionConverter x:Key="MenuSelectionConverter"/>

        <Style x:Key="menuButtonIcon" TargetType="Icon:PackIconMaterial">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 15 0"/>
            <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
        </Style>

        <Style x:Key="menuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Margin="10 2">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15 0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7e5fdc"/>
                </Trigger>

                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource MenuSelectionConverter}">
                            <Binding Path="DataContext.SelectedView" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Path="CommandParameter" RelativeSource="{RelativeSource Self}"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#623ed0"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WinBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="shell:WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DDD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseBtnStyle" TargetType="Button" BasedOn="{StaticResource WinBtnStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid MouseDown="Border_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Border Background="#623ed0" CornerRadius="0 50 0 0">
                <DockPanel>

                    <Button DockPanel.Dock="Top" 
                    HorizontalAlignment="Left" 
                    Margin="20 20 0 10" 
                    Style="{StaticResource topButton}" 
                    Foreground="White"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15" Foreground="White"/>
                    </Button>

                    <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
                    DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0 10 0 0">
                        <Grid>
                            <Ellipse>
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="Orange"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding UserInitials}" VerticalAlignment="Center" HorizontalAlignment="Center"
                               Foreground="White" FontSize="28" FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="{Binding UserFullName}" Foreground="White" FontSize="16" FontWeight="SemiBold"
                       DockPanel.Dock="Top" TextAlignment="Center" Margin="5 15 0 10" TextWrapping="Wrap"/>

                    <Separator Margin="25 10 25 25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc"/>

                    <StackPanel DockPanel.Dock="Top" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="Home" Visibility="{Binding DashboardVisibility}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Home" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Home"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="SellBook">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Shopping" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Sell Book"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="Order">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="FileDocumentEdit" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Order"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="Book">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="BookMultiple" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Book"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="Inventory" Visibility="{Binding DashboardVisibility}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Library" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Inventory"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="RevenueStatistics" Visibility="{Binding DashboardVisibility}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Finance" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Revenue Statistics"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource menuButton}" Command="{Binding NavigateCommand}" CommandParameter="Admin" Visibility="{Binding AdminTabVisibility}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="AccountGroup" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Employee management"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Button Style="{StaticResource menuButton}" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15,0,15,20" Click="LogoutButton_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Logout"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="1" Margin="30 0 0 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0">

                    <Button Style="{StaticResource topButton}" Margin="0 0 10 0" 
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Icon:PackIconMaterial Kind="Bell"/>
                    </Button>

                    <Button Style="{StaticResource WinBtnStyle}" Click="btnMinimize_Click">
                        <Icon:PackIconMaterial Kind="WindowMinimize" Width="10"/>
                    </Button>

                    <Button Style="{StaticResource WinBtnStyle}" Click="btnMaximize_Click">
                        <Icon:PackIconMaterial Kind="WindowMaximize" Width="10"/>
                    </Button>

                    <Button Style="{StaticResource CloseBtnStyle}" Click="CloseApp_Click">
                        <Icon:PackIconMaterial Kind="WindowClose" Width="10"/>
                    </Button>
                </StackPanel>
            </Grid>

            <ContentControl Grid.Row="1" Grid.RowSpan="6"
                            Content="{Binding CurrentViewModel}"
                            Margin="0 10 20 0" />
        </Grid>
    </Grid>
</Window>