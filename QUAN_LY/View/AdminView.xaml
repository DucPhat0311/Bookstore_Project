<!-- QUAN_LY/View/AdminView.xaml -->
<UserControl x:Class="QUAN_LY.View.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:utils="clr-namespace:QUAN_LY.Utilities">

    <UserControl.Resources>
        <!-- 3 Converter cần thiết -->
        <utils:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <utils:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <utils:NotSuperAdminConverter x:Key="NotSuperAdminConverter"/>

        <!-- Danh sách vai trò (không có Super Admin) -->
        <x:Array x:Key="RoleItems" Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>Manager</sys:String>
            <sys:String>Sale Staff</sys:String>
        </x:Array>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề + Nút Thêm -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="AccountGroup" Width="35" Height="35" VerticalAlignment="Center" Foreground="#623ed0"/>
            <TextBlock Text="Quản lý nhân viên" FontSize="26" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>

            <Button Content="Thêm nhân viên mới"
                    Command="{Binding AddCommand}"
                    HorizontalAlignment="Right"
                    Padding="15,8"
                    Background="#623ed0"
                    Foreground="White"
                    BorderBrush="#623ed0"/>
        </StackPanel>

        <!-- Tìm kiếm -->
        <TextBox Grid.Row="1"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Tìm kiếm theo tên hoặc tài khoản"
                 Height="45"
                 FontSize="14"
                 Margin="0,0,0,20"/>

        <!-- Danh sách nhân viên -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding AdminList}"
                  SelectedItem="{Binding SelectedAdmin}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="50"
                  Margin="0,0,0,20"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ và tên" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Tài khoản" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Vai trò" Binding="{Binding RoleDisplay}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusDisplay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form chỉnh sửa / thêm mới -->
        <Border Grid.Row="3"
                Background="#F8F9FA"
                Padding="20"
                CornerRadius="10"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Visibility="{Binding SelectedAdmin, Converter={StaticResource NullToVisibilityConverter}}">

            <StackPanel>
                <TextBlock Text="{Binding SelectedAdmin.AdminId, StringFormat='{}{0} - {0 == 0:Thêm nhân viên mới:Cập nhật thông tin}'}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"
                           Foreground="#623ed0"/>

                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Họ tên -->
                    <TextBox Grid.Column="0"
                             Text="{Binding SelectedAdmin.Name, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Họ và tên"
                             Margin="0,0,10,0"/>

                    <!-- Tài khoản -->
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedAdmin.Username, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Tài khoản đăng nhập"
                             Margin="0,0,10,0"/>

                    <!-- Mật khẩu - chỉ hiện khi thêm mới -->
                    <PasswordBox Grid.Column="2"
             x:Name="PasswordBoxNew"
             materialDesign:HintAssist.Hint="Mật khẩu (chỉ nhập khi thêm mới)"
             Visibility="{Binding SelectedAdmin.AdminId, Converter={StaticResource ZeroToVisibilityConverter}}"
             Margin="0,0,10,0"
             PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Vai trò -->
                    <ComboBox Grid.Column="3"
                              SelectedItem="{Binding SelectedAdmin.Role}"
                              ItemsSource="{StaticResource RoleItems}"
                              materialDesign:HintAssist.Hint="Vai trò"/>
                </Grid>

                <!-- Nút Lưu / Xóa -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Lưu thay đổi"
                            Command="{Binding EditCommand}"
                            Width="120"
                            Margin="0,0,10,0"
                            Background="#4CAF50"
                            Foreground="White"/>

                    <Button Content="Xóa nhân viên"
                            Command="{Binding DeleteCommand}"
                            Width="120"
                            Background="#F44336"
                            Foreground="White"
                            IsEnabled="{Binding SelectedAdmin.Role, Converter={StaticResource NotSuperAdminConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>