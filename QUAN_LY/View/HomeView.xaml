<UserControl x:Class="QUAN_LY.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.View"
             
             xmlns:utils="clr-namespace:QUAN_LY.Utilities"
             
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="4" Rows="1" Margin="0,0,0,20">
            <Border Background="White" CornerRadius="10" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#DDDDDD" BlurRadius="10" ShadowDepth="3" Direction="270" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="DOANH THU HÔM NAY" Foreground="#7f8c8d" FontWeight="SemiBold" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding TodayRevenue}" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtDoanhThu" Foreground="#27ae60" FontWeight="Bold" FontSize="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="10,0,10,0">
                <StackPanel VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="ĐƠN HÀNG HÔM NAY" Foreground="#7f8c8d" FontWeight="SemiBold" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding TodayOrders}" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtDonHang" Foreground="#2980b9" FontWeight="Bold" FontSize="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="10,0,10,0">
                <StackPanel VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="SÁCH ĐÃ BÁN" Foreground="#7f8c8d" FontWeight="SemiBold" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding TodayBooksSold}" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtSachBan" Foreground="#8e44ad" FontWeight="Bold" FontSize="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="10,0,0,0">
                <StackPanel VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="SÁCH SẮP HẾT" Foreground="#7f8c8d" FontWeight="SemiBold" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding LowStockCount}" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#c0392b"/>
                        <TextBlock x:Name="txtCanhBao" Foreground="#c0392b" FontWeight="Bold" FontSize="24"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Border Grid.Row="1" Background="White" CornerRadius="25" Height="50" Margin="0,0,0,20" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="🔍" Grid.Column="0" VerticalAlignment="Center" Margin="15,0,10,0" FontSize="16" Foreground="Gray"/>

                <TextBox x:Name="txtSearch"
                         Grid.Column="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center" 
                         FontSize="16" 
                         BorderThickness="0" 
                         Background="Transparent">
                </TextBox>

                <Button Grid.Column="2" Content="Tìm Kiếm" 
                            Width="100" Margin="5"
                            Background="#2980b9" Foreground="White"
                            FontWeight="Bold" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="10" ShadowDepth="3" Direction="270" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="KẾT QUẢ TRA CỨU" FontWeight="Bold" FontSize="16" Margin="10,5,0,15" Foreground="#34495e"/>

                <DataGrid x:Name="dgBookSearch" Grid.Row="2" 
          ItemsSource="{Binding BookList}" 
          AutoGenerateColumns="False" 
          CanUserAddRows="False"
          
          RowHeight="120"  
          
          BorderThickness="0" 
          IsReadOnly="True"
          GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#EEEEEE"
          VerticalContentAlignment="Center"
          HorizontalContentAlignment="Center">

                    <DataGrid.Resources>
                        <Style x:Key="TextColumnStyle" TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>

                        <Style x:Key="CenterColumnStyle" TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="ẢNH BÌA" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" ClipToBounds="True" Margin="10" Background="#F0F0F0">
                                        <Image Source="{Binding FullImageSource, IsAsync=True}" 
                               Stretch="UniformToFill" 
                               Height="100" Width="100"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="TÊN SÁCH" 
                            Binding="{Binding Title}" 
                            Width="*" 
                            FontWeight="SemiBold"
                            ElementStyle="{StaticResource TextColumnStyle}"/>

                        <DataGridTextColumn Header="TÁC GIẢ" 
                            Binding="{Binding AuthorName}" 
                            Width="150"
                            ElementStyle="{StaticResource TextColumnStyle}"/>

                        <DataGridTextColumn Header="GIÁ BÁN" 
                            Binding="{Binding Price, StringFormat={}{0:N0} đ}" 
                            Width="120" 
                            FontWeight="Bold" 
                            Foreground="#27ae60"
                            ElementStyle="{StaticResource CenterColumnStyle}"/>

                        <DataGridTextColumn Header="TỒN KHO" 
                            Binding="{Binding Quantity}" 
                            Width="100" 
                            FontWeight="Bold" 
                            Foreground="#c0392b"
                            ElementStyle="{StaticResource CenterColumnStyle}"/>

                        <DataGridTextColumn Header="TRẠNG THÁI" Binding="{Binding StatusText}" Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Hết hàng">
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Sắp hết">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Còn hàng">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</UserControl>