<UserControl x:Class="QUAN_LY.View.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:QUAN_LY.Utilities"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1100">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>

    <Grid Background="#F3F4F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.Column="0" Margin="10" materialDesign:ElevationAssist.Elevation="Dp3">
            <StackPanel Margin="15">
                <TextBlock Text="PHIẾU NHẬP HÀNG" FontSize="22" FontWeight="Bold" Foreground="#1A237E" Margin="0,0,0,10"/>

                <Button Command="{Binding NewReceiptCommand}" Content="TẠO PHIẾU NHẬP MỚI" Margin="0,0,0,15" 
                        Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="#3F51B5"/>

                <ComboBox ItemsSource="{Binding PublisherList}" SelectedItem="{Binding SelectedPublisher}" 
                          DisplayMemberPath="Name" materialDesign:HintAssist.Hint="1. Chọn Nhà Xuất Bản" Margin="0,0,0,15" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <ComboBox ItemsSource="{Binding FilteredBookList}" SelectedItem="{Binding SelectedBook}" 
                          DisplayMemberPath="Title" materialDesign:HintAssist.Hint="2. Chọn Sách" Margin="0,0,0,15" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <Border Height="200" Background="#F5F5F5" CornerRadius="5" Margin="0,0,0,15" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Image Source="{Binding SelectedBook.FullImageSource}" 
                                Stretch="Uniform" Margin="5"/>
                        
                        <TextBlock Text="Chưa chọn sách hoặc không có ảnh" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#9E9E9E">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBook}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedBook.ImageUrl}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/><ColumnDefinition Width="10"/><ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Text="{Binding InputQty, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             materialDesign:HintAssist.Hint="Số lượng" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    
                    <TextBox Grid.Column="2" 
                             Text="{Binding InputPrice, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                             materialDesign:HintAssist.Hint="Giá vốn" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>

                <Button Command="{Binding AddItemCommand}" Content="THÊM VÀO PHIẾU" Height="45" Background="#1A237E" FontWeight="Bold"/>
            </StackPanel>
        </materialDesign:Card>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Command="{Binding ToggleHistoryCommand}" Background="#1A237E" Padding="15" Height="Auto">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="History" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="CHI TIẾT PHIẾU / BẤM ĐỂ XEM LỊCH SỬ" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <DataGrid Grid.Row="1" ItemsSource="{Binding ImportItems}" AutoGenerateColumns="False" Margin="0,10,0,0"
                      Visibility="{Binding IsHistoryView, Converter={StaticResource InverseBoolToVis}}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên Sách" Binding="{Binding BookTitle}" Width="*"/>
                    <DataGridTextColumn Header="SL" Binding="{Binding quantity}" Width="80"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding importPrice, StringFormat={}{0:N0}}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid Grid.Row="1" ItemsSource="{Binding ImportHistory}" AutoGenerateColumns="False" Margin="0,10,0,0" IsReadOnly="True" 
                      Visibility="{Binding IsHistoryView, Converter={StaticResource BoolToVis}}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding ImportDate, StringFormat='dd/MM HH:mm'}" Width="120"/>
                    <DataGridTextColumn Header="Sách" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="SL" Binding="{Binding quantity}" Width="60"/>
                    <DataGridTextColumn Header="Đơn Giá" Binding="{Binding importPrice, StringFormat={}{0:N0}}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <materialDesign:Card Grid.Row="2" Margin="0,10,0,0" Padding="10" 
                                 Visibility="{Binding IsHistoryView, Converter={StaticResource InverseBoolToVis}}">
                <DockPanel>
                    <TextBlock Text="{Binding TotalCost, StringFormat=TỔNG: {0:N0} VNĐ}" FontSize="22" FontWeight="Black" Foreground="Red" VerticalAlignment="Center"/>
                    <Button Command="{Binding SaveCommand}" Content="XÁC NHẬN NHẬP KHO" HorizontalAlignment="Right" Background="Green" Foreground="White"/>
                </DockPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>